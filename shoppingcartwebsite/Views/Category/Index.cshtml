@model List<Category>

@{
	ViewData["Title"] = "Category Page";
	Layout = "_LayoutAdmin";
}

<h1>Categories</h1>
<a href="@Url.Action("Create")" class="btn btn-success">Create New Category</a>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <img src="@category.PathToImage" alt="@category.Name Image" style="max-width: 100px;" />
                        </td>
                        <td>@category.Id</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>


