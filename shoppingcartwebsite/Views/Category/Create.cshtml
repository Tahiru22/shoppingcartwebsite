@model Category
@{
    ViewData["Title"] = "Category Page";
    Layout = "_LayoutAdmin";
}
<h1>Create Category</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="Name" required>
    </div>
    <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" class="form-control-file" id="image" name="ImageFile" accept="image/*" onchange="previewImage(event)" required>
        <img id="preview" class="mt-3" style="max-width: 200px; display: none;">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function () {
            var preview = document.getElementById('preview');
            preview.src = reader.result;
            preview.style.display = 'block';
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
