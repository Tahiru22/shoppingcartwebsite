@model shoppingcartwebsite.ViewModels.AuthorizationViewModel



<style>
   

    .card {
        max-width: 500px;
        width: 100%;
    }

</style>

<div class="section">
    <div class="container-fluid col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form asp-action="Authorization" asp-controller="Account" asp-antiforgery="true">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <div class="mt-3 text-center">
                    <a href="forgot-password.html">Forgot password?</a>
                </div>
                <div class="mt-3 text-center">
                    Don't have an account? <a asp-action="Registration" asp-controller="Account">Register</a>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

        </script>
}
